<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="basic.StudentEntity" table="student" schema="public" catalog="test-final">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="true"/>
        </property>

        <property name="registration">
            <column name="registration" sql-type="varchar(255)" not-null="true"/>
        </property>

        <property name="course">
            <column name="course" sql-type="bigint" not-null="true"/>
        </property>

